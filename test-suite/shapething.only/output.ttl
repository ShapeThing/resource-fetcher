@prefix dash: <http://datashapes.org/dash#> .
@prefix ex: <https://example.org/> .
@prefix faker: <https://fakerjs.dev/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix schema: <https://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix stsr: <http://ontology.shapething.com/shacl-renderer#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://example.org/#death> a stsr:CollapsiblePropertyGroup, sh:PropertyGroup ;
  sh:name "Death"@en, "Overlijden"@nl ;
  sh:order 2 .

<http://example.org/#general> a stsr:CollapsiblePropertyGroup, sh:PropertyGroup ;
  sh:name "Algemeen"@nl, "General"@en ;
  sh:order 1 .

<http://example.org/#name> a stsr:HorizontalPropertyGroup, sh:PropertyGroup ;
  sh:order 1 .

ex:shape a stsr:Faker, stsr:Shape, sh:NodeShape ;
  dash:stem <http://example.org/Mensen> ;
  stsr:filenameSuggestion (schema:givenName " " schema:familyName) ;
  stsr:icon "stash:person"^^<https://iconify.design> ;
  sh:closed true ;
  sh:ignoredProperties (stsr:label) ;
  sh:name "Person"@en, "Persoon"@nl ;
  sh:property [
    dash:editor stsr:FileUploadEditor ;
    stsr:uploadUrl <http://example.org/Mensen> ;
    sh:group <http://example.org/#general> ;
    sh:maxCount 1 ;
    sh:name "Foto"@nl, "Photo"@en ;
    sh:path schema:image
  ], [
    sh:datatype xsd:date ;
    sh:editor dash:DatePickerEditor ;
    sh:group <http://example.org/#general> ;
    sh:maxCount 1 ;
    sh:name "Date of birth"@en, "Geboortedatum"@nl ;
    sh:order 2 ;
    sh:path schema:birthDate ;
    faker:generator faker:date.birthdate
  ], [
    sh:datatype xsd:string ;
    sh:group <http://example.org/#general> ;
    sh:maxCount 1 ;
    sh:name "Geboorte locatie"@nl, "Location of birth"@en ;
    sh:order 3 ;
    sh:path schema:birthPlace ;
    faker:generator faker:location.city
  ], [
    sh:datatype xsd:date ;
    sh:editor dash:DatePickerEditor ;
    sh:group <http://example.org/#death> ;
    sh:maxCount 1 ;
    sh:name "Date of death"@en, "Sterfdatum"@nl ;
    sh:order 3 ;
    sh:path schema:deathDate ;
    faker:generator faker:date.birthdate
  ], [
    sh:group <http://example.org/#death> ;
    sh:maxCount 1 ;
    sh:name "Locatie van overlijden"@nl, "Location of death"@en ;
    sh:order 3 ;
    sh:path schema:deathPlace ;
    faker:generator faker:location.city
  ], [
    sh:datatype xsd:string ;
    sh:group <http://example.org/#general> ;
    sh:maxCount 1 ;
    sh:name "E-mail"@nl, "Mail"@en ;
    sh:order 4 ;
    sh:path schema:email ;
    faker:generator faker:internet.email
  ], [
    sh:group <http://example.org/#general> ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "Address"@en, "Adres"@nl ;
    sh:node <http://example.org/#addressShape> ;
    sh:nodeKind sh:BlankNode ;
    sh:order 4 ;
    sh:path schema:address
  ], [
    sh:hasValue schema:Person ;
    sh:path rdf:type
  ], [
    sh:hasValue <http://example.org/> ;
    sh:path sh:shapesGraph
  ], [
    sh:datatype xsd:string ;
    sh:group <http://example.org/#name> ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "Given name"@en, "Voornaam"@nl ;
    sh:path schema:givenName ;
    faker:generator faker:person.firstName
  ], [
    sh:datatype xsd:string ;
    sh:group <http://example.org/#name> ;
    sh:maxCount 1 ;
    sh:name "Middelnaam"@nl, "Middle name"@en ;
    sh:path schema:additionalName ;
    faker:generator faker:person.middleName
  ], [
    sh:datatype xsd:string ;
    sh:group <http://example.org/#name> ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "Achternaam"@nl, "Family name"@en ;
    sh:path schema:familyName ;
    faker:generator faker:person.lastName
  ], [
    sh:group <http://example.org/#general> ;
    sh:in (schema:Male schema:Female) ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "Gender"@en, "Geslacht"@nl ;
    sh:path schema:gender
  ] ;
  sh:targetClass schema:Person .