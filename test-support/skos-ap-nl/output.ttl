@prefix dct: <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix skosapnl: <http://nlbegrip.nl/def/skosapnl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

skosapnl:Concept a sh:NodeShape ;
  rdfs:comment "An idea or notion; a unit of thought."@en, "Een abstract idee of notie."@nl ;
  rdfs:label "Begrip"@nl, "Concept"@en ;
  sh:property skosapnl:Concept-altLabel, skosapnl:Concept-broader, skosapnl:Concept-broaderGeneric, skosapnl:Concept-broaderInstantial, skosapnl:Concept-broaderPartitive, skosapnl:Concept-broadMatch, skosapnl:Concept-changeNote, skosapnl:Concept-closeMatch, skosapnl:Concept-comment, skosapnl:Concept-definition, skosapnl:Concept-editorialNote, skosapnl:Concept-exactMatch, skosapnl:Concept-example, skosapnl:Concept-hiddenLabel, skosapnl:Concept-historyNote, skosapnl:Concept-inScheme, skosapnl:Concept-label, skosapnl:Concept-narrower, skosapnl:Concept-narrowerGeneric, skosapnl:Concept-narrowerInstantial, skosapnl:Concept-narrowerPartitive, skosapnl:Concept-narrowMatch, skosapnl:Concept-notation, skosapnl:Concept-prefLabel, skosapnl:Concept-related, skosapnl:Concept-relatedMatch, skosapnl:Concept-scopeNote, skosapnl:Concept-source, skosapnl:Concept-topConceptOf ;
  sh:sparql skosapnl:OrphanConcept, skosapnl:TopConceptHavingBroader, skosapnl:UnambiguousNotations, skosapnl:UniquePreflabelWithinConceptScheme ;
  sh:targetClass skos:Concept .

skosapnl:Concept-source sh:node skosapnl:SourceDocument .

skosapnl:SourceDocument a sh:NodeShape ;
  rdfs:comment "A source document is a document or web resource that is relevant for a concept"@en, "Een brondocument is een resource op het web of een fysiek document dat relevant is voor een begrip."@nl ;
  rdfs:label "Brondocument"@nl, "Source document"@en ;
  sh:property skosapnl:SourceDocument-bibliographicCitation, skosapnl:SourceDocument-comment, skosapnl:SourceDocument-label, skosapnl:SourceDocument-page ;
  sh:targetObjectsOf dct:source .

skosapnl:SourceDocument-bibliographicCitation a sh:PropertyShape ;
  rdfs:label "bronverwijzing"@nl ;
  sh:datatype xsd:string ;
  sh:description "A bibliographic reference for the resource."@en, "Een bibliografische referentie naar het brondocument."@nl ;
  sh:group skosapnl:LabelsAndDescriptionPropertyGroup ;
  sh:name "bibliographic citation"@en, "bronverwijzing"@nl ;
  sh:nodeKind sh:Literal ;
  sh:order 8 ;
  sh:path dct:bibliographicCitation ;
  sh:severity sh:Warning .

skosapnl:SourceDocument-comment a sh:PropertyShape ;
  rdfs:label "uitleg"@nl ;
  sh:datatype rdf:langString ;
  sh:description "A description of the source document in simple language, at language level B1, which can be understood without further context."@en, "Een beschrijving van het brondocument in eenvoudige taal, op taalniveau B1, die zonder verdere context begrepen kan worden."@nl ;
  sh:group skosapnl:LabelsAndDescriptionPropertyGroup ;
  sh:name "comment"@en, "uitleg"@nl ;
  sh:nodeKind sh:Literal ;
  sh:order 5 ;
  sh:path rdfs:comment ;
  sh:severity sh:Warning .

skosapnl:SourceDocument-label a sh:PropertyShape ;
  rdfs:label "naam"@nl ;
  sh:datatype rdf:langString ;
  sh:description "A word or phrase used to label the source document."@en, "Een naam is een voor mensen leesbare term ter aanduiding van het brondocument."@nl ;
  sh:group skosapnl:LabelsAndDescriptionPropertyGroup ;
  sh:minCount 1 ;
  sh:name "label"@en, "naam"@nl ;
  sh:order 4 ;
  sh:path dct:title ;
  sh:severity sh:Info .

skosapnl:SourceDocument-page a sh:PropertyShape ;
  rdfs:label "url"@nl ;
  sh:description "Location of the source data on the internet"@en, "Vindplaats van de bron op internet."@nl ;
  sh:group skosapnl:LabelsAndDescriptionPropertyGroup ;
  sh:name "page"@en, "url"@nl ;
  sh:nodeKind sh:IRI ;
  sh:order 7 ;
  sh:path foaf:page ;
  sh:severity sh:Warning .
